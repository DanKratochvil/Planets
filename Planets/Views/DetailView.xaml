<UserControl x:Class="Planets.Views.DetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Planets.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Planets.ViewModels" mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10" HorizontalAlignment="Stretch">
            <TextBlock Margin="0,5" Text="Properties by selected planet:" />
            <DataGrid VerticalAlignment="Stretch" AutoGenerateColumns="False" IsReadOnly="True"
                      ItemsSource="{Binding PlanetProperties}"
                      LostFocus="DataGrid_LostFocus"
                      SelectedItem="{Binding SelectedPlanetProperty}"
                      SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="*"
                                        Binding="{Binding Property.Name}"
                                        Header="Property" />
                    <DataGridTextColumn Width="*"
                                        Binding="{Binding Value}"
                                        Header="Value" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <!--  CRUD buttons  -->
        <StackPanel Grid.Column="1" Margin="0,35" HorizontalAlignment="Left">
            <ComboBox Width="200" DisplayMemberPath="Name"
                      ItemsSource="{Binding AvailableProperties}"
                      SelectedItem="{Binding EditedPropertyName}" />
            <TextBox Width="200" Margin="0,5"
                     Text="{Binding EditedPropertyValue}" />
            <StackPanel Orientation="Horizontal">
                <Button Width="60" Margin="5,5"
                        Command="{Binding AddPropertyCommand}"
                        Content="Add" />
                <Button Width="60" Margin="5,5"
                        Command="{Binding UpdatePropertyCommand}"
                        Content="Update" />
                <Button Width="60" Margin="5,5"
                        Command="{Binding DeletePropertyCommand}"
                        Content="Delete" />
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
