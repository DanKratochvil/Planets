<UserControl x:Class="Planets.Views.FilterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Planets.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450" d:DesignWidth="800" mc:Ignorable="d">
    <StackPanel Grid.Row="0">
        <TextBlock Margin="10,5" Text="Filter by Property:" />
        <StackPanel Orientation="Horizontal">
            <ComboBox Width="150" Margin="10,0" DisplayMemberPath="Name"
                      ItemsSource="{Binding Properties}"
                      SelectedItem="{Binding SelectedProperty}" />
            <TextBox Width="100" Text="{Binding FilterValue}" />
            <Button Margin="10,0"
                    Command="{Binding ApplyFilterCommand}"
                    Content="Apply Filter" />
            <Button Command="{Binding ClearFilterCommand}" Content="Clear Filter" />
        </StackPanel>
    </StackPanel>
</UserControl>
